<p style="color: green"><%= notice %></p>

<h1><%= Todo.model_name.human %></h1>

<%= render @todo %>

<div>
  <%= link_to t("view.show.move_to_update", model: Todo.model_name.human), edit_todo_path(@todo) %> |
  <%= link_to t("view.show.move_to_index", model: Todo.model_name.human.pluralize), todos_path %>

  <%= button_to t("helpers.submit.delete"),
                @todo,
                method: :delete,
                class: %w[btn btn-primary],
                data: { turbo_confirm: t("helpers.dialog.delete", id: @todo.id) } %>
</div>
